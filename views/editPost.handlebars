<div class = "containerEdit">
    <form class = "box mx-6 my-6  " >  
        <div class="field">
            <label class="label">Post Title...</label>
            <div class="control">
                <input class="input" type="text" value="{{blogPosts.name}}" id="postTitle">
            </div>
        </div>
    
        <div class="field">
            <label class="label">Content</label>
            <div class="control">
                <textarea class="textarea" type="textarea" id="postBody"> {{blogPosts.description}} </textarea>   
            </div>
        </div>

        <div class="lowerField">
            <div class="control">
                <button class="button is-link" id="updatePost" data-id="{{blogPosts.id}}">Update</button>
            </div>
            <div class="control">
                <button class="button is-link is-danger" id="deletePost" data-id="{{blogPosts.id}}">Delete</button>
            </div>
        </div>
    </form>
</div>

<script src="/js/editPost.js"></script>